// Equipment listing.
.beyond-utils-equipment
	&__active-container
		height: 10px
		margin-top: -16px

	&__item-name
		margin-right: 10px
		float: right

	&__overweight-marker
		position: relative

		svg
			position: absolute
			top: 2px
			left: -26px
			width: 20px
			height: 20px
			fill: #C53131

			.ct-character-sheet--dark-mode &
				fill: #7E4F3D

	&__note
		display: contents

		&:first-child &-item:not(.beyond-utils--is-hidden)
			& ^[-1]-separator
				display: none

			& + ^[-1]-item:not(.beyond-utils--is-hidden) ^[-1]-separator
				display: inline

	&[data-active-container] &__note-amounts
		display: none

// Extra settings in the item pane (inside the customize section).
.beyond-utils-item-pane__settings
	width: 100%

	&__field-wrapper
		display: contents

	&__weight-field
		flex-direction: row-reverse
		align-items: center
		width: auto
		font-size: 10px
		gap: 10px

// Make inventory header fixed.
.ct-inventory__row-header
	position: sticky
	top: 0
	background: white

	.ct-subsection-mobile &
		padding-top: 5px
		transition: top 0.25s 0.2s

		.ct-character-sheet--going-down &
			top: 119px

		.ct-character-sheet--going-up &
			top: 189px
