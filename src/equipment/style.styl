// Equipment listing.
.beyond-utils-equipment
	&__active-container
		border-bottom: 2px solid #0602
		background-color: #0601

		.ct-character-sheet--dark-mode &
			border-color: #0A02
			background-color: #0A01

	&__item-name
		margin-right: 10px
		float: right

	&__overweight-marker
		position: relative

		svg
			position: absolute
			top: 2px
			left: -26px
			width: 20px
			height: 20px
			fill: #C53131

			.ct-character-sheet--dark-mode &
				fill: #7E4F3D

	&__note
		display: contents

		&:first-child &-item:not(.beyond-utils--is-hidden)
			& ^[-1]-separator
				display: none

			& + ^[-1]-item:not(.beyond-utils--is-hidden) ^[-1]-separator
				display: inline

	&[data-active-container] &__note-amounts
		display: none

// Extra settings in the item pane (inside the customize section).
.beyond-utils-item-pane__settings
	width: 100%

	&__field-wrapper
		display: contents

	&__weight-field
		flex-direction: row-reverse
		align-items: center
		width: auto
		font-size: 10px
		gap: 10px
